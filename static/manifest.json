{
  "name": "HuntSplash: Beautiful Photos & Top Products",
  "version": "1.1.0",
  "manifest_version": 2,
  "description":
    "See beautiful photos along with top trending products on every new tab you open in Google Chrome.",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "*://api.producthunt.com/*",
    "*://api.unsplash.com/*",
    "storage"
  ],
  "web_accessible_resources": ["main.js", "client.*.css"],
  "content_security_policy":
    "script-src 'self' 'unsafe-eval' https://www.google-analytics.com; object-src 'self'"
}
